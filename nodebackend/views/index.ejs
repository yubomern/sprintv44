<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Category AJAX CRUD</title>

  <!-- jQuery & Bootstrap CDN -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

  <style>
    body {
      background-color: #f8f9fa;
      padding-top: 2rem;
    }

    .container {
      max-width: 800px;
    }

    .category-card {
      background-color: white;
      border-radius: 8px;
      padding: 1rem 1.5rem;
      margin-bottom: 1rem;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    .modal-header {
      background-color: #343a40;
      color: white;
    }

    .modal-footer .btn {
      min-width: 100px;
    }

    .btn-sm {
      margin-left: 5px;
    }

    h1 {
      font-size: 2rem;
      margin-bottom: 1.5rem;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="text-center">Category Manager</h1>

    <div class="text-right mb-3">
      <button class="btn btn-primary" data-toggle="modal" data-target="#categoryModal" onclick="resetForm()">+ Add Category</button>
    </div>

    <div id="categoryList"></div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="categoryModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">

        <div class="modal-header">
          <h5 class="modal-title" id="modalLabel">Category Form</h5>
          <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
            <span>&times;</span>
          </button>
        </div>

        <form id="categoryForm">
          <div class="modal-body">
            <input type="hidden" id="categoryId" />
            <div class="form-group">
              <label for="name">Category Name</label>
              <input type="text" class="form-control" id="name" placeholder="Enter category name" required />
            </div>
            <div class="form-group">
              <label for="description">Description</label>
              <textarea class="form-control" id="description" rows="3" placeholder="Enter description"></textarea>
            </div>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-success">Save</button>
          </div>
        </form>

      </div>
    </div>
  </div>

  <script>
    // Load categories
    function fetchCategories() {
      $.get('/api/categories', function (data) {
        $('#categoryList').empty();
        if (data.length === 0) {
          $('#categoryList').html('<p class="text-muted text-center">No categories available.</p>');
          return;
        }

        data.forEach(cat => {
          $('#categoryList').append(`
            <div class="category-card">
              <h5>${cat.name}</h5>
              <p>${cat.description || 'No description'}</p>
              <div class="text-right">
                <button class="btn btn-warning btn-sm" onclick="editCategory('${cat._id}', '${cat.name}', \`${cat.description}\`)">Edit</button>
                <button class="btn btn-danger btn-sm" onclick="deleteCategory('${cat._id}')">Delete</button>
              </div>
            </div>
          `);
        });
      });
    }

    fetchCategories();

    // Create or Update
    $('#categoryForm').submit(function (e) {
      e.preventDefault();
      const name = $('#name').val();
      const description = $('#description').val();
      const id = $('#categoryId').val();

      if (id) {
        $.ajax({
          url: `/api/categories/${id}`,
          method: 'PUT',
          data: { name, description },
          success: () => {
            $('#categoryModal').modal('hide');
            fetchCategories();
            resetForm();
          },
        });
      } else {
        $.post('/api/categories', { name, description }, () => {
          $('#categoryModal').modal('hide');
          fetchCategories();
          resetForm();
        });
      }
    });

    // Edit
    function editCategory(id, name, description) {
      $('#categoryId').val(id);
      $('#name').val(name);
      $('#description').val(description);
      $('#modalLabel').text('Edit Category');
      $('#categoryModal').modal('show');
    }

    // Delete
    function deleteCategory(id) {
      if (confirm('Are you sure you want to delete this category?')) {
        $.ajax({
          url: `/api/categories/${id}`,
          method: 'DELETE',
          success: () => fetchCategories(),
        });
      }
    }

    function resetForm() {
      $('#name').val('');
      $('#description').val('');
      $('#categoryId').val('');
      $('#modalLabel').text('Add Category');
    }
  </script>
</body>
</html>
