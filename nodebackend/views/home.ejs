<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Category AJAX CRUD</title>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  

  <style>
    .box-shadow {
        box-shadow: 1px 1px 5px #707377;
    }
    
    .text-shadow {
        text-shadow: 0 2px 5px #707377;
    }
    
    .nav-link {
        padding: 0rem 1rem;
    }
    
    ::placeholder {
        color: #e6e6e6 !important;
    
    }
    
    .line-through {
        text-decoration: line-through;
        color: #6c757d;
    }
    
    .edit-line {
        margin: 3px 0;
        border: 1px solid #ced4da;
        box-shadow: inset 0 -1px 5px #ced4da;
    }
    
    
    
    input:focus {
        outline: none
    }
    
    .nav-link {
        border: 2px solid transparent;
    }
    
    .nav-pills .nav-link.active, .nav-pills .show>.nav-link { 
        background-color: transparent !important;
        border: 2px solid #6c757d;
    }
  </style>
</head>
<body>
  <h1>Categories</h1>

  <form id="categoryForm">
    <input type="text" id="name" placeholder="Category Name" required />
    <input type="text" id="description" placeholder="Description" />
    <input type="hidden" id="categoryId" />
    <button type="submit">Save</button>
  </form>

  <ul id="categoryList"></ul>

  <script>
    // Load categories
    function fetchCategories() {
      $.get('/api/categories', function (data) {
        $('#categoryList').empty();
        data.forEach(cat => {
          $('#categoryList').append(`
            <li>
              <b>${cat.name}</b> - ${cat.description}
              <button onclick="editCategory('${cat._id}', '${cat.name}', '${cat.description}')">Edit</button>
              <button onclick="deleteCategory('${cat._id}')">Delete</button>
            </li>
          `);
        });
      });
    }

    fetchCategories();

    // Create or Update
    $('#categoryForm').submit(function (e) {
      e.preventDefault();
      const name = $('#name').val();
      const description = $('#description').val();
      const id = $('#categoryId').val();

      if (id) {
        $.ajax({
          url: `/api/categories/${id}`,
          method: 'PUT',
          data: { name, description },
          success: () => {
            fetchCategories();
            resetForm();
          },
        });
      } else {
        $.post('/api/categories', { name, description }, () => {
          fetchCategories();
          resetForm();
        });
      }
    });

    // Edit
    function editCategory(id, name, description) {
      $('#name').val(name);
      $('#description').val(description);
      $('#categoryId').val(id);
    }

    // Delete
    function deleteCategory(id) {
      if (confirm('Delete this category?')) {
        $.ajax({
          url: `/api/categories/${id}`,
          method: 'DELETE',
          success: () => fetchCategories(),
        });
      }
    }

    function resetForm() {
      $('#name').val('');
      $('#description').val('');
      $('#categoryId').val('');
    }
  </script>
</body>
</html>
